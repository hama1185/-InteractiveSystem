
m = 1.0;//質量
c = 2.3;//ダンパ
k = 1.0;//ばね
xgoal = 1.0;//目標値
dt = 0.01;//時間間隔
xrecord = [];//記録用
for i = 1:10
    x = 0;//現在地
    v = 0;//現在速度
    flag = 0;//収束値を上回ったかの判定を行う
    for t = 1:1500
        F = 1.0*(xgoal - x);
        a = (F - k * x - c * v) / m;
        v = v + a * dt;
        x = x + v * dt;
        xrecord = [xrecord, x];
        if x > 0.5 then
            flag = 1;
        end
    end
    if flag == 1 then
        disp(c);
    end
    c = c + 0.1;
end
plot(xrecord);

